    {
      "parameters": {
        "jsCode": "const doc = $('PDF Vector - Extract Info').item.json.data;\nconst summary = $input.first().json.markdown;\nconst fileName = $('Google Drive Trigger').item.json.name;\n\n// Format key statistics\nconst stats = doc.keyStatistics || [];\nconst statsList = stats.map(s => `üìä ${s.statistic}`).join('\\n') || 'None extracted';\n\n// Format findings\nconst findings = doc.mainFindings || [];\nconst findingsList = findings.map((f, i) => `${i + 1}. ${f}`).join('\\n') || 'None listed';\n\n// Format recommendations\nconst recommendations = doc.recommendations || [];\nconst recsList = recommendations.map(r => `‚úì ${r}`).join('\\n') || 'None provided';\n\n// Format keywords\nconst keywords = doc.keywords || [];\nconst keywordsList = keywords.join(', ') || 'None';\n\nreturn [{\n  json: {\n    ...doc,\n    executiveSummary: summary,\n    fileName: fileName,\n    fileId: $('Google Drive Trigger').item.json.id,\n    statsList: statsList,\n    statsCount: stats.length,\n    findingsList: findingsList,\n    findingsCount: findings.length,\n    recsList: recsList,\n    recsCount: recommendations.length,\n    keywordsList: keywordsList,\n    processedAt: new Date().toISOString()\n  }\n}];"
      },
