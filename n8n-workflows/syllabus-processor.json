    {
      "parameters": {
        "jsCode": "const syllabus = $input.first().json.data;\nconst fileName = $('Google Drive Trigger').item.json.name;\nconst fileId = $('Google Drive Trigger').item.json.id;\n\nconst course = syllabus.course || {};\nconst instructor = syllabus.instructor || {};\nconst schedule = syllabus.schedule || {};\n\n// Format schedule\nconst scheduleText = schedule.days \n  ? `${schedule.days.join(', ')} at ${schedule.time} in ${schedule.location}`\n  : 'Not specified';\n\n// Format grading breakdown\nconst grading = syllabus.grading || [];\nconst gradingText = grading.map(g => `${g.category}: ${g.weight}%`).join(' | ') || 'Not specified';\n\n// Format required materials\nconst materials = syllabus.materials || [];\nconst requiredMaterials = materials.filter(m => m.required !== false);\nconst materialsList = requiredMaterials.map(m => `üìñ ${m.title} by ${m.author || 'N/A'}`).join('\\n') || 'None listed';\n\n// Count and format assignments\nconst assignments = syllabus.assignments || [];\nconst exams = syllabus.exams || [];\nconst upcomingDeadlines = [...assignments, ...exams]\n  .filter(a => a.dueDate || a.date)\n  .sort((a, b) => new Date(a.dueDate || a.date) - new Date(b.dueDate || b.date))\n  .slice(0, 10)\n  .map(a => `üìå ${a.name}: ${a.dueDate || a.date}`)\n  .join('\\n') || 'None listed';\n\n// Format learning objectives\nconst objectives = syllabus.learningObjectives || [];\nconst objectivesList = objectives.slice(0, 5).map((o, i) => `${i+1}. ${o}`).join('\\n') || 'Not specified';\n\nreturn [{\n  json: {\n    ...syllabus,\n    fileName: fileName,\n    fileId: fileId,\n    courseName: course.name || 'Unknown Course',\n    courseCode: course.code || 'N/A',\n    credits: course.credits,\n    semester: course.semester,\n    department: course.department,\n    instructorName: instructor.name || 'TBD',\n    instructorEmail: instructor.email,\n    instructorOffice: instructor.office,\n    officeHours: instructor.officeHours,\n    scheduleText: scheduleText,\n    scheduleDays: schedule.days,\n    scheduleTime: schedule.time,\n    scheduleLocation: schedule.location,\n    gradingText: gradingText,\n    materialsList: materialsList,\n    materialCount: requiredMaterials.length,\n    assignmentCount: assignments.length,\n    examCount: exams.length,\n    upcomingDeadlines: upcomingDeadlines,\n    objectivesList: objectivesList,\n    processedAt: new Date().toISOString()\n  }\n}];"
      },
